# 虎皮椒支付配置
HUPIJIAO_APP_ID=your_app_id_here
HUPIJIAO_APP_SECRET=your_app_secret_here
HUPIJIAO_NOTIFY_URL=http://your-domain.com/api/payment/notify

# 前端URL配置
FRONTEND_URL=http://localhost:5173

# 后端端口配置
PORT=3002

# 生产环境建议配置
NODE_ENV=production

# CORS 白名单（生产环境逗号分隔）
# 示例: https://your-app.vercel.app,https://your-domain.com
CORS_ALLOWED_ORIGINS=

# 支付模式（production/sandbox）
PAYMENT_MODE=production

# 生产建议关闭手动补单
ALLOW_MANUAL_COMPLETE=false

# 可选：手动补单管理员令牌（若开启手动补单建议配置）
MANUAL_COMPLETE_TOKEN=

# Credit enforcement toggle (off/on)
VITE_CREDIT_ENFORCE=off

# When backend credit consume fails:
# on  = fallback to local consume (default for testing)
# off = fail fast (recommended for production)
VITE_CREDIT_LOCAL_FALLBACK=on

# Local DEV credit testing: off | bootstrap | unlimited
VITE_CREDIT_TEST_MODE=off
VITE_CREDIT_BOOTSTRAP=50000

# Credits API behavior (optional, keep default)
# CREDIT_LEDGER_MODE=file

# Watermark QR code URL for free-user shared images
VITE_WATERMARK_QR_URL=

# DashScope (Qwen/WAN) - server proxy reads these keys
# 推荐只配置 DASHSCOPE_API_KEY；其余两个为历史兼容位
DASHSCOPE_API_KEY=
QWEN_API_KEY=
VITE_DASHSCOPE_API_KEY=

# N1N companion generation (server-side proxy)
N1N_BASE_URL=https://api.n1n.ai/v1
N1N_API_KEY=
N1N_COMPANION_ANALYSIS_MODEL=gpt-4.1-mini
N1N_COMPANION_IMAGE_MODEL=gpt-image-1

# LiblibAI (server-side proxy required)
LIBLIB_ACCESS_KEY=
LIBLIB_SECRET_KEY=

# Fish Audio (server-side proxy required for TTS/voice clone)
FISH_AUDIO_API_KEY=

# DeepSeek (server-side proxy recommended)
DEEPSEEK_API_KEY=
VITE_DEEPSEEK_API_KEY=

# Tencent COS (server upload required)
VITE_TENCENT_COS_SECRET_ID=
VITE_TENCENT_COS_SECRET_KEY=
VITE_TENCENT_COS_BUCKET=
VITE_TENCENT_COS_REGION=
